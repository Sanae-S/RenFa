<!-- user_infoテンプレート -->
<div class="user-info">
  <div class="user-info__title">
    <h2>会員詳細</h2>
  </div>
  <table class="user-info__table table">
    <tr>
      <th class="col-sm-4">名前</th>
      <td class="col-sm-8"><%= user.name %></td>
    </tr>
    <tr>
      <th class="col-sm-4">Eメール</th>
      <td class="col-sm-8"><%= user.email %></td>
    </tr>
    <tr>
      <% if current_user == @user || current_user.admin? %>
        <th class="col-sm-4">住所</th>
        <td class="col-sm-8"><%= user.address %></td>
      <% end %>
    </tr>
    <tr>
      <th class="col-sm-4">紹介文</th>
      <td class="col-sm-8"><%= @user.user_info %></td>
    </tr>
    <tr>
    </tr>
  </table>
  <div class="user-info__buttn">
    <%= link_to '編集する', edit_user_path(user.id), class: "button btn btn-primary" %>
    <% if user_signed_in? && @user.id == current_user.id %>
      <%= link_to "退会", user_hide_path(current_user), method: :put, "data-confirm" => "本当に退会しますか？", class: "button btn btn-danger" %>
    <% end %>
  </div>
  <hr>
</div>