<!-- user_infoテンプレート -->
<div class="user-info">
  <div class="user-info__title">
    <h2>会員詳細</h2>
  </div>
  <table class="user-info__table">
    <tr>
      <th>名前</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= user.email %></td>
    </tr>
    <tr>
      <% if current_user == @user || current_user.admin? %>
        <th>住所</th>
        <td><%= user.address %></td>
      <% end %>
    </tr>
    <tr>
      <th>紹介文</th>
      <td><%= @user.user_info %></td>
    </tr>
    <tr>
      <th>DM</th>
      <td>
        <%#= render "users/contact",user: @post_image.user,haveRoom: @haveRoom, entry: @entry,room: @room, roomId:@post_image.user %>
      </td>
    </tr>
  </table>
  <div class="buttmn">
    <%= link_to '編集する', edit_user_path(user.id), class: "button btn btn-primary" %>
    <%= link_to 'パスワードを変更する', edit_user_registration_path, class: "button btn btn-primary" %>
    <% if user_signed_in? && @user.id == current_user.id %>
      <%= link_to "退会", users_hide_path(current_user), method: :put, "data-confirm" => "本当に退会しますか？", class: "button btn btn-danger" %>
    <% end %>
  </div>
</div>