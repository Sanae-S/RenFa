<div class="search-form">
  <%= form_tag(search_path, :method => 'get') do %>
      <%= select_tag(:option, options_for_select([["user", "1"],["post_image","2"]]))%>
      <%= select_tag(:choice, options_for_select([["あいまい検索", "1" ],["後方一致検索", "2" ],["前方一致検索", "3" ],["完全一致検索", "4" ]])) %>
      <%= text_field_tag :search %>
      <%= submit_tag 'Search' %>
  <% end %>
</div>

<div class="search">
  <% if @user_or_post_image == "1"%>
    <h1>User</h1>
      <table>
        <% @users.each do |user| %>
        <thead>
          <tr>
            <td>氏名</td>
          </tr>
        </thead>
          <% @users.each do |user| %>
            <tbody>
              <tr>
                <td>
                  <%= link_to user_path(user) do %>
                    <%= user.name %>
                  <% end %>
                </td>
                <% end %>
              </tr>
            </tbody>
        <% end %>
      </table>

  <% elsif @user_or_post_image == "2" %>
      <h2>投稿</h2>
      <table>
      <% @post_images.each do |post_image| %>
          <thead>
              <tr>
                  <th>
                  	<%= link_to post_image_path(post_image) do %>
                  	  <%= post_image.animal_name %>
                  	<% end %>
                  </th>
                  <td>
                    <%= attachment_image_tag post_image, :image, format: "jpeg", width:"300", height:"auto" %>
                  </td>
              </tr>
          </thead>
      <% end %>
      </table>
  <% else %>
  <% end %>
</div>