<div class="user-show">
  <div class="user-show__title">
    <h2>会員詳細</h2>
  </div>
  <table class="user-show__table">
    <tr>
      <th>名前</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @user.email %></td>
    </tr>
    <% if current_user == @user || current_user.admin? %>
      <tr>
        <th>住所</th>
          <td><%= @user.address %></td>
      </tr>
    <% end %>

    <tr>
      <th>紹介文</th>
      <td><%= @user.user_info %></td>
    </tr>
  </table>
  <div class="user-show__DM">
    <%= render "contact",user: @user,haveRoom: @haveRoom, entry: @entry,room: @room ,roomId: @roomId%>
  </div>
  <br>
  <div class="user-show__buttmn">
    <%= link_to '投稿一覧', user_posts_path(@user.id), class: "button btn btn-success" %>
    <%= link_to '編集する', edit_user_path(@user.id), class: "button btn btn-primary" %>
    <%= link_to 'パスワードを変更する', edit_user_registration_path, class: "button btn btn-primary" %>
    <% if user_signed_in? && @user.id == current_user.id %>
      <%= link_to "退会", user_hide_path(current_user), method: :put, "data-confirm" => "本当に退会しますか？", class: "button btn btn-danger" %>
    <% end %>
  </div>
</div>