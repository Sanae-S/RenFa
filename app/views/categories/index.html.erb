<!-- admin=trueのみ追加、編集可 -->
<% if current_user.admin? && !(current_user == user) %>
    <div class="category-new">
      <h3 class="caregory-new__label">カテゴリー追加</h3>
      <div class="category-new__form">
        <%= form_with model: @category, local: true do |f| %>
          <%= f.label :category_name, 'カテゴリー名' %>
          <%= f.text_field :category_name, class:'form-control' %>
          <%= f.submit '追加', class: 'btn btn-primary btn-block' %>
        <% end %>
      </div>
    </div>
    <div class="category-index">
      <h3 class="caregory-new__label">カテゴリー一覧</h3>
      <table class="category-index__table">
        <thead>
           <tr>
             <th>カテゴリー名</th>
             <th></th>
             <th></th>
           </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.category_name %></td>
              <td><%= link_to '編集', edit_category_path(category), class: 'btn-sm btn-primary' %></td>
              <td><%= link_to '削除', category_path(category), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn-sm btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="category-index">
      <h3 class="caregory-new__label">カテゴリー一覧</h3>
      <table class="category-index__table">
        <thead>
           <tr>
             <th>カテゴリー名</th>
           </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td>
              	<%#= link_to user_path(@post_image.user) do %>
                  <%= category.category_name %>
                <%# end %>
               </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
<% end %>