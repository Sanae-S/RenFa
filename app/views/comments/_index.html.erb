<% comments.each do |comment| %>
  <% unless comment.id.nil? %>
    <p><%= link_to "#{comment.user.name}さん", user_path(comment.user.id) %></p>
    <p>コメント：<%= comment.content %></p>
    <% if comment.user == current_user %>
      <p><%= link_to 'コメントを削除する', post_image_comment_path(comment.post_image_id, comment.id), method: :delete, remote: true %></p>
      <!-- 「remote: true」をつけることによって、コントローラーでjsファイルを探し -->
    <% end %>
  <% end %>
<% end %>