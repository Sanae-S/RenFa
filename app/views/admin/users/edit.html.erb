<div class="user-show">
  <div class="user-show__title">
    <h2>会員詳細</h2>
  </div>
  <table class="user-show__table">
    <tr>
      <th>名前:</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>メールアドレス:</th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th>住所:</th>
        <td><%= @user.address %></td>
    </tr>
    <tr>
      <th>紹介文:</th>
      <td><%= @user.user_info %></td>
    </tr>
    <tr>
      <th>会員ステータス:</th>
      <td class="is_deleted">
      <%= form_for(@user, url: admin_user_path ) do |f| %>
        <%= f.radio_button :is_deleted, :"false" %>
        <%= f.label :is_deleted, "有効", {value: :"false"}%>
        <%= f.radio_button :is_deleted, :"true" %>
        <%= f.label :is_deleted, "退会済み", {value: :"true"} %>
        <%= f.submit '編集内容を保存する', class: "btn btn-primary"%>
      <% end %>
      </td>
    </tr>
  </table>
</div>