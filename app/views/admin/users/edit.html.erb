<div class="admin-user-edit">
  <div class="admin-user-edit__title">
    <h2>会員編集</h2>
  </div>
  <table class="admin-user-edit__table col-sm-12">
    <tr>
      <th class="col-sm-2">名前:</th>
      <td class="col-sm-10"><%= @user.name %></td>
    </tr>
    <tr>
      <th class="col-sm-2">メールアドレス:</th>
      <td class="col-sm-10"><%= @user.email %></td>
    </tr>
    <tr>
      <th class="col-sm-2">住所:</th>
        <td class="col-sm-10"><%= @user.address %></td>
    </tr>
    <tr>
      <th class="col-sm-2">紹介文:</th>
      <td class="col-sm-10"><%= @user.user_info %></td>
    </tr>
    <tr>
      <th class="col-sm-2">会員ステータス:</th>
      <td class="admin-user-edit__is_deleted col-sm-10">
      <%= form_for(@user, url: admin_user_path ) do |f| %>
        <%= f.radio_button :is_deleted, :"false" %>
        <%= f.label :is_deleted, "有効", {value: :"false"}%>
        <%= f.radio_button :is_deleted, :"true" %>
        <%= f.label :is_deleted, "退会済み", {value: :"true"} %>
        <%= f.submit '編集内容を保存する', class: "btn btn-primary"%>
      <% end %>
      </td>
    </tr>
  </table>
</div>