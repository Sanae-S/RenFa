<%# 会員一覧画面 %>
<div class="admin-users-index col-xs-10">
  <div class="admin-users-index__title">
    <h2>会員一覧</h2>
  </div>
  <br>
  <div class="admin-users-index__table">
    <table class="table">
      <thead>
        <tr>
          <td class="col-xs-1">会員ID</td>
          <td class="col-xs-3">氏名</td>
          <td class="col-xs-6">メールアドレス</td>
          <t class="col-xs-2">ステータス</td>
        </tr>
      </thead>
        <% @users.each do |user| %>
          <tbody>
            <tr>
              <td><%= user.id %></td>
              <td>
                <%= link_to admin_user_path(user) do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td><%= user.email %></td>
              <% if user.is_deleted == false %>
                <td>有効</td>
              <% else %>
                <td>退会済</td>
              <% end %>
            </tr>
          </tbody>
        <% end %>
      </table>
  </div>
  <div class="kaminari">
    <%= paginate @users %>
  </div>
</div>