<div class="category-edit col-xs-8">
  <h3 class="caregory-edit__label">カテゴリー追加</h3>
  <br>
  <div class="category-edit__form">
    <%= form_with model: [:admin, @category], local: true do |f| %>
      <%= f.label :category_name, 'カテゴリー名' %>
      <%= f.text_field :category_name, class:'form-control' %>
      <br>
      <%= f.submit '保存', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>