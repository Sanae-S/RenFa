<div class="left-button"></div>
<h4 class="rooms-title">abc</h4>
<% @entries.each do |e| %>
  <div class="user-name">
    <strong>
      <%= image_tag "#{e.user.avatar}", class:"avatar" %>
      <a class="rooms-user-link" href="/users/<%= e.user.id %>">
        <%= e.user.nickname %>
      </a>
    </strong>
  </div>
<% end %>
<hr/>
<div class="chats">
  <div class="chat__scroll">
    <% if @messages.present? %>
      <% @messages.each do |m| %>
        <div id="message_<%= m.id %>">
          <div class="chatbox">
            <div class="chat-face1">
              <%= image_tag "#{m.user.avatar}", class:"avatar" %>
              <div class="chat-hukidashi"></div>
              <%= m.user.nickname %>
              <br/>
              <%= m.message %>
              <br/>
              <%= m.created_at.strftime("%Y-%m-%d %H:%M") %>
              <%= form_with(model: @message, url: edit_message_path(m.id), remote: true, method: :get) do |f| %>
                <%= f.hidden_field :room_id, value: @room.id %>
                <%= f.submit "edit" %>
              <% end %>
              <%= form_with(model: @message, url: message_path(m.id), remote: true, method: :delete) do |f| %>
                <%= f.hidden_field :room_id, value: @room.id %>
                <%= f.submit "delete" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>